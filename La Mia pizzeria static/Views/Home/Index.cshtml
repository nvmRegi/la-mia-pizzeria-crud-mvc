@{
    Layout = "_MioLayout";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mt-3 mb-3">Lista Pizze</h1>
            </div>
        </div>
    </div><div class="row js_wait_post text-center">
        <div class="col-12">
            <h3>Sto aspettando i POST ...</h3>
        </div>
    </div>
    <div class="row js_no_post text-center d-none">
        <div class="col-12">
            <h3>Non hai inserito alcun post</h3>
        </div>
    </div>
    <div class="row js_post_cards d-none">
        <!-- qui verranno mostrati gli elementi -->
    </div>
</div>

@section Scripts{

    <script type="text/javascript">
        loadPizzas();

        function loadPizzas(){
            axios.get('/api/Pizzas/Get').then((result) =>{
                //codice che verrà eseguito quando arrivano i dati dalla mia web api
                console.log("Ho ricevuto le mie pizze!");

                if(result.data.lenght == 0){
                    document.querySelector(".js_wait_post").classList.add("d-none")
                    document.querySelector('.js_no_post').classList.remove('d-none');
                } else{
                    document.querySelector(".js_wait_post").classList.add("d-none")
                    document.querySelector('.js_post_cards').classList.remove('d-none');

                    result.data.forEach(pizza => {
                        document.querySelector('.js_post_cards').innerHTML +=
                        `
                        <div class="col-12 col-md-4 p-2">
                            <div class="card" style="width: 18rem;">
                                <img src="https://localhost:7194/img/${pizza.image}" class="card-img-top" alt="pizza">
                                <div class="card-body">
                                    <h5 class="card-title">${pizza.nome}</h5>
                                    <p>&euro;${pizza.prezzo}</p>
                                </div>
                                
                                <ul class="list-group list-group-flush">
                        `
                        //for(var i = 0; i < ${pizza.ingrediente.lenght}; i++){
                        //    document.querySelector('.js_post_table').innerHTML +=
                        //    `
                        //    <li class="list-group-item">- ${ingrediente.nome}</li>                                
                        //    </ul>
                        //    </div>
                            //`
                        //}
                    })
                }
            }
            
            ).catch((error) =>{
                console.log("C'è stato un errore: " + error);
            });
        }
    </script>
    
}  

