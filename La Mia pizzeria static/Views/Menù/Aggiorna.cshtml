@model Pizza

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Modifica Pizza</h1>
            </div>
            <form asp-controller="Menù" asp-action="Aggiorna" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <strong>Immagine:</strong>
                    <input asp-for="Image" class="d-block w-100" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Nome:</strong>
                    <input asp-for="Nome" class="d-block w-100" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                 <div class="row">
                    <div class="col-lg-12">
                        <div id="inputFormRow">
                            @foreach(Ingrediente ingrediente in Model.Ingredienti)
                            {
                                <div class="input-group mb-3">
                                    <input asp-for="@ingrediente.nome" class="form-control m-input" placeholder="Enter title" autocomplete="off">
                                    <div class="input-group-append">
                                        <button id="removeRow" type="button" class="btn btn-danger">Remove</button>
                                    </div>
                                </div>
                            }
                        </div>
                <div id="newRow"></div>
                        <button id="addRow" type="button" class="btn btn-info">Add Row</button>
                    </div>
                </div>

                <span asp-validation-for="Ingredienti" class="text-danger"></span>

@*                <div class="mb-3">
                    <strong>Ingredienti:</strong>
                    <textarea asp-for="Ingrediente" rows="10" class="d-block w-100"></textarea>
                    <span asp-validation-for="Ingrediente" class="text-danger"></span>
                </div>*@

                <div class="mb-3">
                    <strong>Prezzo:</strong>
                    <input asp-for="Prezzo" class="d-block w-100" />
                </div>
                <div class="text-end">
                    <input type="submit" class="btn btn-small btn-success" value="Salva">
                </div>
            </form>
        </div>
    </div>
</div>