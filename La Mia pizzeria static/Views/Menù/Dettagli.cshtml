@model Pizza

   <div class="container" id="sfondoDettagli">
      <div class="row text-center">
         <div class="col-12">
            <div>
               <h1 class="mt-3 mb-3">Dettagli Pizza</h1>
            </div>
         </div>
      </div>
   
     <div class="row justify-content-center">
         <div class="col-auto">
               <img src="https://localhost:7194/img/@Model.Image" alt="Pizza" width="400">
         </div>
         <div class="col-auto">
            <p>
               <strong>Nome:</strong>
               @Model.Nome
            </p>
            <p>
               <strong>Ingredienti:</strong>
                @foreach(Ingrediente ingrediente in Model.Ingredienti)
                {
                    <br /> <span>- @ingrediente.nome </span>
                }
            </p>
            <p>
               <strong>Prezzo: </strong>&euro;
               @Model.Prezzo
            </p>
            
         </div>
      </div>
   </div>