@model Pizza

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli Pizza</h1>
            </div>
            <div>
                <img src="https://localhost:7194/img/@Model.Image" alt="Pizza" width=400>
            </div>
            <p>
                <strong>Nome:</strong>
                @Model.Nome
            </p>
            <p>
                <strong>Ingredienti:</strong>
                @Model.Ingrediente
            </p>
            <p>
                <strong>Prezzo: </strong>&euro;
                @Model.Prezzo
            </p>
        </div>
    </div>
</div>